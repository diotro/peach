datasource db {
  provider = "sqlite"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
  output   = "./generated/"
}

model Volume {
  id    Int   @id
  name  String
  path  String
}

model MovieMetadata {
  id          Int @id

  movie       Movie @relation(fields: [movieId], references: [id])
  movieId     String

  quality     String
  format      String
  fps         Int

  minutes     Int
  seconds     Int

  size        Int
}

model Movie {
  id          String @id
  createdAt   DateTime @default(now())
  title       String @unique

  path        String
  volume      Volume @relation(fields: [volumeId], references: [id])
  volumeId    Int

  metadata    MovieMetadata?

  // actresses   Actress[]
  // genres      Genre[]
  // highlights  Highlight[]
  actors      Int @default(0)
  // website     Website
  cover       Int @default(2)
}
