datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

generator client {
  provider = "prisma-client-js"
  output   = "./generated/"
}

model Volume {
  id    Int   @id
  name  String
  path  String
}

model Movie {
  id          String @id
  createdAt   DateTime @default(now())
  title       String @unique

  path        String
  volume      Volume @relation(fields: [volumeId], references: [id])
  volumeId    Int

  // actresses   Actress[]
  // genres      Genre[]
  // highlights  Highlight[]
  actors      Int @default(0)
  quality     String
  format      String
  fps         Int
  minutes     Int
  seconds     Int
  size        Int
  // website     Website
  cover       Int @default(2)
}
