{
  "name": "peach",
  "version": "3.0.0-alpha",
  "description": "porn organizer",
  "bin": "packages/app/dist/index.js",
  "repository": "https://github.com/peachporn/peach.git",
  "author": "GalateaPolymorph <galateapolymorph@gmail.com>",
  "license": "GPL-3.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "pkg": {
    "assets": [
      "packages/frontend/dist/**/*",
      "packages/database/database.db"
    ]
  },
  "scripts": {
    "clean": "lerna run clean --stream && rm -rf bin",
    "build": "lerna run build --stream",
    "watch": "lerna run watch --stream",
    "lint": "eslint packages/**/src",
    "generate": "yarn generate:prisma && yarn generate:types",
    "generate:types": "lerna run generate:types --stream",
    "generate:prisma": "prisma generate --schema packages/database/schema.prisma",
    "package": "pkg . -t node13-linux-x64,node13-macos-x64,node13-win-x64 -o bin/peach",
    "dev": "lerna run dev --scope @peach/app --stream"
  },
  "devDependencies": {
    "@prisma/cli": "^2.0.0-beta.6",
    "@types/eslint": "^6.8.1",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^3.0.2",
    "eslint": "^7.1.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prefer-arrow": "^1.2.1",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "lerna": "^3.22.0",
    "pkg": "^4.4.8",
    "prettier": "^2.0.5",
    "typescript": "^3.9.3"
  }
}
