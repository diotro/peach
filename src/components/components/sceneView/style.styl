.scene-view
  position relative
  width 100%
  display grid
  overflow-x auto
  max-height 14em

.scene-view__marker
  display flex
  cursor pointer
  height 100%
  min-width 14em
  transition background-color .2s ease
  border-left 2px solid mainColor
  background-color white
  filter opacity(.6)

  &:focus
    outline none

  &:last-child
    border-right 2px solid mainColor

.scene-view__marker--current
  filter opacity(1)

.scene-view__delete
  position absolute
  top .2em
  right .2em
  background white
  display flex
  align-items center
  opacity 0
  visibility hidden
  transition all .2s ease

  +medium()
    opacity 1
    visibility visible

.scene-view__marker:hover .scene-view__delete
  opacity 1
  visibility visible

.scene-view__subgenres
  display flex
  flex-flow row nowrap
  align-self flex-end

