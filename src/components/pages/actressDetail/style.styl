.actress-detail-page .container
  display grid
  grid-template-columns 33vw 66vw
  grid-template-areas "card header" "card data" "controls data"
  column-gap 2em
  row-gap 1em

.actress-detail-card
  grid-area card
  justify-self end
  height 15em
  position relative
  bottom 10em

.actress-data-grid
  grid-area data

.actress-detail-header
  grid-area header

.actress-detail__controls
  grid-area controls
  justify-self end
