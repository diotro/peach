.movie-detail-page .container
  display grid
  grid-template-columns repeat(5, 1fr)
  grid-template-areas "headline headline headline headline headline"  "stats stats actresses actresses actresses" "screencaps screencaps screencaps screencaps screencaps" "table table table table table"
  grid-gap 2em

  .movie-metadata-table
    grid-area table
    .tablecell
      word-break break-all
      &:first-child
        width 30%


  .title-form
    grid-area headline

    .headline
      cursor pointer

  .screencap-strip
    grid-area screencaps
